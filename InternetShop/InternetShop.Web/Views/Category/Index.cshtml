@model List<CategoryViewModel>
@{
    ViewBag.Title = "Category";
    int count = 1;
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="col-6 right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">CREATE CATEGORY</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>NUMBER</th>
                <th>NAME</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Redact</a>
                        <a class="btn btn-danger delete" id="@category.Id">Delete</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $('.delete').on('click', function() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    let isDeleted = Delete(this);
                    if (isDeleted) {
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }
                }
            })
        })
        function Delete(el) {
            let id = Number($(el).attr('id'));
            return $.ajax({
                url: '@Url.Action("Delete", "Category")',
                dataType: 'post',
                data: { id: id },
                success: function() {
                    return true;
                },
                error: function() {
                    return false;
                }
            })
        }
    </script>
}